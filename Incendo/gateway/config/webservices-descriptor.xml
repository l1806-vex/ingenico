<!DOCTYPE mbeans-descriptors PUBLIC
 "-//Apache Software Foundation//DTD Model MBeans Configuration File"
 "http://jakarta.apache.org/commons/dtds/mbeans-descriptors.dtd">

<!-- Descriptions of JMX MBeans for Catalina -->

<mbeans-descriptors>

    <mbean name="WebServices" description="Web services counters"
        type="com.ingenico.oegw.stat.WebServicesTotalStatistics">

        <attribute name="activeRequests"
            description="Concurrent requests" writeable="false"
            displayName="Concurrent requests" type="int" />

        <attribute name="avgRequestTime"
            description="Average session duration"
            displayName="Average request duration" writeable="false"
            type="double" />

        <attribute name="processedRequests"
            description="Number of completed web service requests"
            displayName="Completed requests" writeable="false"
            type="long" />
        <attribute name="failedRequests"
            description="Number of failed web service requests"
            displayName="Failed requests" writeable="false" type="long" />
    </mbean>

</mbeans-descriptors>


