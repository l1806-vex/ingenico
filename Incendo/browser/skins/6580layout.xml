<?xml version="1.0"?>
<termlayout>
    <!--

    This file contains the terminal layout representation

    -->

    <!-- Simulator box -->
    <simbody sx="323" sy="622" body_icon="skins/6580/box.png"/>

    <!--Small dialog widgets and their buttons-->

    <!--ICC cards insert dialog-->
    <sdbody sx="321" sy="155" body_icon="skins/common/icc-box.png"
        title="ICC card reader" />
    <sdbutton off_x="18" off_y="54" sx="66" sy="37"
        texton="insert" function="ICCInsert"/>
    <sdbutton off_x="95" off_y="54" sx="66" sy="37"
        texton="cancel" function="ICCCancel"/>

    <!--ICC cards remove dialog-->
    <sdbody sx="321" sy="155" body_icon="skins/common/icc-remove-box.png"
        title="ICC card eject" off_x="300" off_y="622"/>
    <sdbutton off_x="85" off_y="86" sx="151" sy="39"
        texton="remove card" function="ICCRemove"/>

    <!--Magnetic card dialog-->
    <sdbody sx="321" sy="155" body_icon="skins/common/magnetic-box.png"
        title="Magnetic stripe card" />
    <sdbutton off_x="18" off_y="54" sx="66" sy="37"
        texton="swipe" function="MAGSwipe"/>
    <sdbutton off_x="91" off_y="54" sx="66" sy="37"
        texton="add" function="MAGAdd"/>
    <sdbutton off_x="164" off_y="54" sx="66" sy="37"
        texton="delete" function="MAGDelete"/>
    <sdbutton off_x="237" off_y="54" sx="66" sy="37"
        texton="cancel" function="MAGCancel"/>

    <!--Add magnetic card dialog-->
    <sdbody sx="816" sy="243" body_icon="skins/common/magnetic-add-box.png"
        title="Add card" />
    <sdbutton off_x="653" off_y="58" sx="66" sy="37"
        texton="ok" function="MAGADDOk"/>
    <sdbutton off_x="726" off_y="58" sx="66" sy="37"
        texton="cancel" function="MAGADDCancel"/>

    <!--Switch simulator model dialog-->
    <sdbody sx="321" sy="155" body_icon="skins/common/switch-model-box.png"
      title="Switch simulator model" />
    <sdbutton off_x="18" off_y="54" sx="66" sy="37"
        texton="ok" function="SwitchModelOk"/>
    <sdbutton off_x="95" off_y="54" sx="66" sy="37"
        texton="cancel" function="SwitchModelCancel"/>


    <!--Risk managment dialog-->
    <sdbody sx="321" sy="155" body_icon="skins/common/risk-managment-box.png"
        title="Risk managment" />
    <sdbutton off_x="20" off_y="58" sx="66" sy="37"
        texton="offline" function="RISKMGTOffline"/>
    <sdbutton off_x="91" off_y="58" sx="66" sy="37"
        texton="decline" function="RISKMGTDecline"/>
    <sdbutton off_x="164" off_y="58" sx="66" sy="37"
        texton="online" function="RISKMGTOnline"/>

    <!--Screen widget-->
    <screen off_x="33" off_y="74"/>

    <!--Keypad widget-->
    <keypad off_x="24" off_y="306" sx="283" sy="227"
        body_icon="skins/6780/keypad.png"/>

    <!--Keypad buttons-->

    <keypadbutton off_x="20" off_y="18" sx="53" sy="47"
        kpb_icon="skins/6780_6550_common/1.png"
        kpb_icon_down="skins/6780_6550_common/1d.png"
        hmi_code="1" accel="1"/>

    <keypadbutton off_x="81" off_y="19" sx="60" sy="44"
        kpb_icon="skins/common/2.png"
        kpb_icon_down="skins/common/2d.png"
        hmi_code="2" accel="2"/>

    <keypadbutton off_x="148" off_y="18" sx="60" sy="44"
        kpb_icon="skins/common/3.png"
        kpb_icon_down="skins/common/3d.png"
        hmi_code="3" accel="3"/>

    <keypadbutton off_x="213" off_y="17" sx="53" sy="47"
        kpb_icon="skins/common/stop.png"
        kpb_icon_down="skins/common/stopd.png"
        hmi_code="HMI_KEY_CLEAR" accel="Esc"/>

    <keypadbutton off_x="20" off_y="66" sx="53" sy="47"
        kpb_icon="skins/common/4.png"
        kpb_icon_down="skins/common/4d.png"
        hmi_code="4" accel="4"/>

    <keypadbutton off_x="82" off_y="68" sx="60" sy="44"
        kpb_icon="skins/common/5.png"
        kpb_icon_down="skins/common/5d.png"
        hmi_code="5" accel="5"/>

    <keypadbutton off_x="146" off_y="66" sx="60" sy="44"
        kpb_icon="skins/common/6.png"
        kpb_icon_down="skins/common/6d.png"
        hmi_code="6" accel="6"/>

    <keypadbutton off_x="213" off_y="65" sx="53" sy="47"
        kpb_icon="skins/6780_6550_common/clear.png"
        kpb_icon_down="skins/6780_6550_common/cleard.png"
        hmi_code="HMI_KEY_BCKSP" accel="Backspace"/>

    <keypadbutton off_x="23" off_y="115" sx="53" sy="47"
        kpb_icon="skins/6780_6550_common/7.png"
        kpb_icon_down="skins/6780_6550_common/7d.png"
        hmi_code="7" accel="7"/>

    <keypadbutton off_x="82" off_y="120" sx="60" sy="44"
        kpb_icon="skins/common/8.png"
        kpb_icon_down="skins/common/8d.png"
        hmi_code="8" accel="8"/>

    <keypadbutton off_x="147" off_y="121" sx="60" sy="43"
        kpb_icon="skins/6780_6550_common/9.png"
        kpb_icon_down="skins/6780_6550_common/9d.png"
        hmi_code="9" accel="9"/>

    <keypadbutton off_x="211" off_y="115" sx="52" sy="96"
        kpb_icon="skins/6780_6550_common/enter.png"
        kpb_icon_down="skins/6780_6550_common/enterd.png"
        hmi_code="HMI_KEY_ENTER" accel="Return" accel2="Enter"/>

    <keypadbutton off_x="26" off_y="163" sx="53" sy="47"
        kpb_icon="skins/6780_6550_common/plus.png"
        kpb_icon_down="skins/6780_6550_common/plusd.png"
        hmi_code="HMI_KEY_PAPER_FEED" accel="Up" accel2="+"/>

    <keypadbutton off_x="84" off_y="173" sx="60" sy="43"
        kpb_icon="skins/6780_6550_common/0.png"
        kpb_icon_down="skins/6780_6550_common/0d.png"
        hmi_code="0" accel="0"/>

    <keypadbutton off_x="147" off_y="173" sx="60" sy="43"
        kpb_icon="skins/6780_6550_common/minus.png"
        kpb_icon_down="skins/6780_6550_common/minusd.png"
        hmi_code="HMI_KEY_00_PT" accel="Down" accel2="-"/>

    <!--Simulator body buttons for invoking dialogs/window manager support-->

    <!--Invoke switch model dialog button-->
    <simbutton off_x="271" off_y="28" sx="27" sy="27"
        kpb_icon="skins/common/switch.png" kpb_icon_down="skins/common/switchd.png"
        function="SwitchSim" accel="ALT+S"/>

    <!--Invoke reset terminal button-->
    <simbutton off_x="249" off_y="28" sx="27" sy="27"
        kpb_icon="skins/common/reset.png" kpb_icon_down="skins/common/resetd.png"
        function="ResetSim" accel="ALT+R"/>

    <!--Minimize button (_)-->
    <simbutton off_x="308" off_y="28" sx="27" sy="27"
        kpb_icon="skins/common/minimize.png"  kpb_icon_down="skins/common/minimized.png"
        function="MinimizeSim"/>

    <!--Close button (X)-->
    <simbutton off_x="331" off_y="28" sx="27" sy="27"
        kpb_icon="skins/common/close.png" kpb_icon_down="skins/common/closed.png"
        function="CloseSim" accel="ALT+F4"/>

    <!--Invoke insert card dialog button-->
    <simbutton off_x="298" off_y="421" sx="66" sy="112"
        kpb_icon="skins/6780/insert.png" kpb_icon_down="skins/6780/insertd.png"
        function="InsertCard" accel="I"/>

    <!--Invoke swipe card dialog button-->
    <simbutton off_x="298" off_y="310" sx="67" sy="112"
        kpb_icon="skins/6780/swipe.png"  kpb_icon_down="skins/6780/swiped.png"
        function="SwipeCard" accel="S"/>
</termlayout>
