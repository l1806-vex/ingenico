<DAL xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.ingenico.com/schemas/dal/1_0">

	<version DAL_version="01.00" this_version="01.00" />
	<goal name="inputDetailsScreen">
		<window>
			<children>
				<picture>
					<visible>true</visible>
					<grow>width</grow>
					<source>BgIngenico.PNG</source>
					<item>
						<column>1</column>
						<row>0</row>
					</item>
				</picture>
				<layout>
					<children>
						<list>
							<items>
								<label>
									<text>Name</text>
									<backalign>left</backalign>
									<idname>../widgetMappings.iml#ID_LABEL_NAME</idname>
								</label>
								<edit>
									<text>JOHN DOE</text>
									<textalign>left</textalign>
									<idname>../widgetMappings.iml#ID_EDIT_NAME</idname>
								</edit>
								<label>
									<text>Birthday</text>
									<idname>../widgetMappings.iml#ID_LABEL_AGE</idname>
								</label>
								<edit>
									<mask>/d/d/d/d/./d/d/./d/d/</mask>
									<textalign>left</textalign>
									<text>1976.09.25</text>
									<idname>../widgetMappings.iml#ID_EDIT_AGE</idname>
								</edit>
								<radiobutton>
									<text>Female</text>
									<backalign>center</backalign>
									<state>unchecked</state>
									<idname>../widgetMappings.iml#ID_RADIO_FEMALE</idname>
									<maxsize>
										<width>50</width>
										<unit>%</unit>
									</maxsize>
								</radiobutton>
								<radiobutton>
									<text>Male</text>
									<backalign>center</backalign>
									<state>checked</state>
									<idname>../widgetMappings.iml#ID_RADIO_MALE</idname>
									<maxsize>
										<width>50</width>
										<unit>%</unit>
									</maxsize>
								</radiobutton>

								<checkbutton>
									<text>Married</text>
									<idname>../widgetMappings.iml#ID_CHECK_MARITAL</idname>
									<maxsize>
										<width>50</width>
										<unit>%</unit>
									</maxsize>
									<backalign>center</backalign>
								</checkbutton>

								<label>
									<text>ZIP Code</text>
									<idname>../widgetMappings.iml#ID_LABEL_ZIP</idname>
								</label>
								<edit>
									<text>07503</text>
									<mask>/d/d/d/d/d</mask>
									<idname>../widgetMappings.iml#ID_EDIT_ZIP</idname>
								</edit>
								<label>
									<text>City</text>
									<idname>../widgetMappings.iml#ID_LABEL_CITY</idname>
								</label>
								<edit>
									<text>GUILHERAND</text>
									<idname>../widgetMappings.iml#ID_EDIT_CITY</idname>
								</edit>
							</items>
						</list>
						<button>
							<grow>width</grow>
							<backalign>right</backalign>
							<text>OK</text>

							<item>
								<column>0</column>
								<row>1</row>
							</item>
							<idname>../widgetMappings.iml#ID_BUTTON_OK</idname>
							<margins>
								<right>10</right>
								<unit>%</unit>
							</margins>
						</button>
						<button>
							<backalign>left</backalign>
							<grow>width</grow>
							<text>Cancel</text>
							<item>
								<column>0</column>
								<row>1</row>
							</item>
							<margins>
								<left>10</left>
								<bottom>1</bottom>
								<right>1</right>
								<top>1</top>
								<unit>%</unit>
							</margins>
							<idname>../widgetMappings.iml#ID_BUTTON_CANCEL</idname>
						</button>
					</children>
				</layout>
			</children>
			<position>
				<y>0</y>
				<x>0</x>
				<unit>%</unit>
			</position>
			<size>
				<width>100</width>
				<unit>%</unit>
				<height>100</height>
			</size>
		</window>
	</goal>
</DAL>
